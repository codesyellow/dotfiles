" Personal Binds
let mapleader = " "
nnoremap <leader>e :Lexplore<CR>
nnoremap <leader>pi :IndentLinesToggle<CR>
nnoremap <leader>vs :so %<CR>
nnoremap <leader>ppu :PlugInstall<CR>
nnoremap <leader>ppc :PlugClean<CR>
