#!/usr/bin/env bash
is_running() {
    if [[ "$2" == "node" ]]; then
        script=$(ps -ef | grep 'node' | grep $1)
    else
        script=$(ps -ef | grep 'bash' | grep $1)
    fi
    if [[ -z "$script" ]]; then
        $1 &
    fi
}

is_running 'easy_always.sh'
is_running 'gameon.mjs' 'node'
santos_calendar.py &

pavucontrol --gapplication-service &
gammastep -P -O 2500 &
earphone.sh &
whatsap_on.sh &
systemctl --user import-environment PATH &
dunst &
/usr/lib/polkit-kde-authentication-agent-1 &
ianny &
wl-paste --type text --watch cliphist store &
is_music.py &
sway-audio-idle-inhibit &
swayidle -w &
syncthing &
xrandr --output VGA-1 --primary & # to fix game spawning on the wrong monitor
