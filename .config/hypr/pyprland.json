{
    "pyprland": {
        "plugins": [
            "scratchpads"
        ]
    },
    "scratchpads": {
        "term": {
            "command": "alacritty --config-file ~/.config/alacritty/alacritty2.toml --class alacritty-dropterm",
            "animation": "fromTop",
            "unfocus": "false"
        },
        "neorg": {
            "command": "foot -a neorg -e /usr/bin/nvim -c ':Neorg workspace home'",
            "animation": "fromBottom",
            "unfocus": "false"
        },
        "bard": {
            "command": "foot -a bard -e bard-cli -i",
            "animation": "fromTop",
            "unfocus": "false"
        },
        "task": {
            "command": "foot -a task-tui -e /usr/bin/taskwarrior-tui",
            "unfocus": "hide",
            "animation": "fromRight"
        },
        "btop": {
            "command": "foot -a btop -e btop",
            "unfocus": "hide",
            "animation": "fromRight"
        }
    }
}
