#!/bin/bash
light-keys.sh &
swaybg -i ~/.wallpapers/shaded_landscape.png &
waybar &
hyprshade on blue-light-filter &
pypr &
dunst &
flatpak run com.github.wwmm.easyeffects --gapplication-service &
wl-copy &
/usr/lib/polkit-kde-authentication-agent-1 &
wl-paste --watch cliphist store &
swayidle -w \
    timeout 300 'swaylock -i ~/.wallpapers/shaded_landscape.png' \
    timeout 600 'hyprctl dispatch dpms off"' \
    resume 'hyprctl dispatch dpms off"' \
    before-sleep 'swaylock -i ~/.wallpapers/shaded_landscape.png' &
syncthing &
sway-audio-idle-inhibit &
swayosd-server &
